{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "REDIS_URL",
        "REDIS_PASSWORD",
        "clientId",
        "clientSecret",
        "githubId",
        "githubSecret",
        "JWT_SECRET"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "REDIS_URL",
        "REDIS_PASSWORD",
        "clientId",
        "clientSecret",
        "githubId",
        "githubSecret",
        "JWT_SECRET"
      ]
    }
  }
}
